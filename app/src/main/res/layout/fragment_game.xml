<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.fragments.GameFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_game_img" />

    <TextView
        android:id="@+id/id_game_tv_timer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="0:00"
        android:textStyle="italic"
        android:fontFamily="@font/alfa_slab_one"
        android:textSize="35sp"
        android:background="@drawable/background_tv_menu"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/id_game_tv_lvl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="LVL : 1/10"
        android:textSize="35sp"
        android:fontFamily="@font/alfa_slab_one"
        android:background="@drawable/background_tv_menu"
        android:layout_marginStart="10dp"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_game_tv_timer"/>

    <TextView
        android:id="@+id/id_game_tv_question"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="24sp"
        android:fontFamily="@font/alfa_slab_one"
        android:textColor="@color/white"
        android:text="When was the first official women's hockey game held?"
        android:background="@drawable/background_tv_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_game_tv_lvl"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.1"/>

    <TextView
        android:id="@+id/id_game_tv_answer_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:text="the stick is raised above the opponent's shoulders."
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/id_game_tv_answer_2"
        app:layout_constraintTop_toBottomOf="@id/id_game_tv_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.08"
        android:background="@drawable/background_tv_menu"/>


    <TextView
        android:id="@+id/id_game_tv_answer_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:text="ответ такой то приветики всем"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/id_game_tv_answer_3"
        app:layout_constraintTop_toBottomOf="@id/id_game_tv_answer_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.08"
        android:background="@drawable/background_tv_menu"/>



    <TextView
        android:id="@+id/id_game_tv_answer_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:text="ответ такой то приветики всем"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/id_game_tv_answer_4"
        app:layout_constraintTop_toBottomOf="@id/id_game_tv_answer_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.08"
        android:background="@drawable/background_tv_menu"/>



    <TextView
        android:id="@+id/id_game_tv_answer_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:text="ответ такой то приветики всем"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/id_game_button_next"
        app:layout_constraintTop_toBottomOf="@id/id_game_tv_answer_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.08"
        android:background="@drawable/background_tv_menu"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_game_button_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.1"
        android:background="@drawable/background_button_menu_exit"
        android:layout_marginBottom="10dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:fontFamily="@font/alfa_slab_one"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>